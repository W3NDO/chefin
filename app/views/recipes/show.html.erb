<div class="flex flex-col justify-around w-full" >
    <div class="flex flex-col justify-around w-full"> 
        <div class="">
            <p class="text-2xl text-white"> <%= @recipe.name %> by <%= @recipe.get_recipe_author %> </p>
            <%= link_to "ðŸ”— Read description", "#description", class: "text-white" %>
        </div>

        <div class="flex justify-around mt-2">
            <% if @recipe.belongs_to_user?(current_user) %>
                <div>
                    <%= link_to "Edit this Recipe", edit_recipe_path(@recipe), class: "py-1 px-2 rounded-md text-white active:bg-purple-800 bg-blue-400" %>
                </div>
            <% end %>

            <div class="justify-around">
                <%= link_to "Start cooking along", :cooking_session_show, class: "py-1 px-2 rounded-md text-white  active:bg-purple-800 bg-gray-500" %>
            </div>
        </div>
    </div>

    <hr class="m-2"/>
    <div>
        <span class="text-white font-semibold"> Required Ingredients </span>
        <%= render partial: "ingredients_checklist", locals: {ingredients: @ingredients} %>
    </div>

    <hr class="m-2"/>
    <div>
        <span class="text-white font-semibold"> Steps </span>
        <%= render partial: "steps_checklist", locals: {steps: @steps} %>
    </div>

    <hr class="m-2"/>
    <div id="description">
        <h3 class="text-white font-semibold"> Description </h3>
        <p class="text-white text-justify"> <%= @recipe.description %> </p>
    </div>
    
</div>