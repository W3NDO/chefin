<%= form_for :ingredient, url: "/recipes/#{@recipe.slug}/ingredients" do |ingredient| %>
    <div class="flex flex-col w-full m-2">
        <%= ingredient.label "Ingredient Name", class: "w-full text-white text-lg" %>
        <%= ingredient.text_field :name, class: "bg-white p-2 rounded-xl"%>
    </div>

    <div class="flex flex-col w-full m-2">
        <%= ingredient.label "Amount", class: "w-full text-white text-lg" %>
        <%= ingredient.number_field :amount, step: :any, class: "bg-white p-2 rounded-xl" %>
        <div class="m-2">
            <ul class="items-center w-full text-sm font-medium text-heading bg-neutral-primary-soft border border-default rounded-lg sm:flex">
            <% Ingredient.amount_units.keys.each do |unit| %>
                
                <li class="w-full border-b border-default sm:border-b-0 sm:border-r">
                    <div class="flex items-center ps-3">
                        <%= ingredient.radio_button :amount_unit, unit, class: "w-4 h-4 text-neutral-primary border-default-medium bg-neutral-secondary-medium rounded-full checked:border-brand focus:ring-2  focus:outline-none focus:ring-brand-subtle border border-default" %>
                        <label for="horizontal-list-radio-license" class="w-full py-3 select-none ms-1 me-1 text-sm font-medium text-heading text-white"><%= unit.humanize %> </label>
                    </div>
                </li>
            <% end %>
            </ul>
        </div>
    </div>

    <div class="flex flex-col w-full m-2">
        <%= ingredient.label "Alternatives", class: "w-full text-white text-lg" %>
        <%= ingredient.text_field :alternative, class: "bg-white p-2 rounded-xl" %>
    </div>

    <div class="flex justify-between w-full m-2">
        <%= ingredient.submit "Save ingredient", class: "bg-blue-500 p-2 rounded-lg w-90 mx-2" %>
        <%= link_to "Go to the Recipe", recipe_path(@recipe), class: "text-center bg-blue-500 p-2 rounded-lg w-90 mx-2" %>
        <%= link_to "+ Add the steps", new_recipe_step_path(@recipe), class: "bg-blue-500 p-2 rounded-lg w-90 mx-2 text-center" %>
    </div>
<% end %>